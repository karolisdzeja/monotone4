<h1>Listing hearts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Video</th>
      <th>Created at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hearts.each do |heart| %>
      <tr>
        <td><%= heart.user_id %></td>
        <td><%= heart.video_id %></td>
        <td><%= heart.created_at %></td>
        <td><%= link_to 'Show', heart %></td>
        <td><%= link_to 'Edit', edit_heart_path(heart) %></td>
        <td><%= link_to 'Destroy', heart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

